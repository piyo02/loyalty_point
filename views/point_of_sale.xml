<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- redeem point -->
        <record id="view_redeem_point_in_pos_form" model="ir.ui.view">
            <field name="name">pos.order.redeem.form.view</field>
            <field name="model">pos.order.redeem</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <field name="pos_order_id"/>
                    </div>
                    <div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="points"/>
                            </group>
                            <group>
                                <field name="redeem_amount"/>
                            </group>
                        </group>
                    </div>
                </form>
            </field>
        </record>

        <record id="redeem_point_in_pos_tree_view" model="ir.ui.view">
            <field name="name">pos.order.redeem.tree.view</field>
            <field name="model">pos.order.redeem</field>
            <field name="arch" type="xml">
                <tree create='0'>
                    <field name="pos_order_id" />
                    <field name="partner_id" />
                    <field name="points" />
                    <field name="redeem_amount" />
                </tree>
            </field>
        </record>

        <!-- earned loyalty point -->
        <record id="view_earned_loyalty_point_from_pos_form" model="ir.ui.view">
            <field name="name">pos.order.point.form.view</field>
            <field name="model">pos.order.point</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <field name="pos_order_id"/>
                    </div>
                    <div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="points"/>
                                <field name="expired_date"/>
                            </group>
                        </group>
                    </div>
                </form>
            </field>
        </record>

        <record id="earned_loyalty_point_from_pos_tree_view" model="ir.ui.view">
            <field name="name">pos.order.point.tree.view</field>
            <field name="model">pos.order.point</field>
            <field name="arch" type="xml">
                <tree create='0'>
                    <field name="pos_order_id" />
                    <field name="partner_id"/>
                    <field name="points"/>
                    <field name="expired_date"/>
                </tree>
            </field>
        </record>

        <record id="action_earned_loyalty_point_from_pos" model="ir.actions.act_window">
            <field name="name">Earned Loyalty Point from POS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.order.point</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_redeem_point_in_pos" model="ir.actions.act_window">
            <field name="name">Redeem Point in POS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.order.redeem</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_loyalty_point_in_pos" 
                  name="Loyalty" 
                  parent="point_of_sale.menu_point_root" 
                  groups="point_of_sale.group_pos_manager"
        />

        <menuitem id="menu_redeem_point_in_pos" 
                  name="Redeem Point" 
                  parent="menu_loyalty_point_in_pos" 
                  action="action_redeem_point_in_pos" 
                  groups="base.group_system"
        />

        <menuitem id="menu_earned_loyalty_point_from_pos" 
                  name="Earned Loyalty Point" 
                  parent="menu_loyalty_point_in_pos" 
                  action="action_earned_loyalty_point_from_pos" 
                  groups="base.group_system"
        />

        <record model="ir.ui.view" id="ace_view_pos_config_form">
            <field name="name">pos.config.form.view.inherit</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
            <field name="arch" type="xml">
                <field name="iface_display_categ_images" position="after">
                    <field name="enable_pos_loyalty"/>
                    <field name="loyalty_journal_id" 
                     attrs="{'invisible': [('enable_pos_loyalty', '=', False)], 'required': [('enable_pos_loyalty', '=', True)]}"
                     context="{'journal_ids': journal_ids, 'loyalty_jr': True}"
                     options="{'no_create':True}"/>
                </field>
            </field>
        </record>

        <record id="order_inherited_form_view" model="ir.ui.view">
            <field name="name">pos.order.inherited.view</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="total_loyalty_earned_points" />
                    <field name="total_loyalty_earned_amount" />
                    <field name="total_loyalty_redeem_points" />
                    <field name="total_loyalty_redeem_amount" />
                </field>
            </field>
        </record>

</odoo>
