<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- earned point in pos -->
    <!-- tree -->
    <record id="earned_loyalty_point_from_pos_tree_view" model="ir.ui.view">
        <field name="name">loyalty.point.record.tree.view</field>
        <field name="model">loyalty.point.record</field>
        <field name="arch" type="xml">
            <tree create='0'>
                <field name="pos_order_id" />
                <field name="partner_id"/>
                <field name="points"/>
                <field name="expired_date"/>
            </tree>
        </field>
    </record>
    <!-- form -->
    <record id="view_earned_loyalty_point_from_pos_form" model="ir.ui.view">
        <field name="name">loyalty.point.record.form.view</field>
        <field name="model">loyalty.point.record</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <field name="pos_order_id"/>
                </div>
                <div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="points"/>
                            <field name="expired_date"/>
                        </group>
                    </group>
                </div>
            </form>
        </field>
    </record>

    <!-- redeem point in pos -->
    <!-- tree -->
    <record id="redeem_point_in_pos_tree_view" model="ir.ui.view">
        <field name="name">redeem.loyalty.point.record.tree.view</field>
        <field name="model">redeem.loyalty.point.record</field>
        <field name="arch" type="xml">
            <tree create='0'>
                <field name="pos_order_id" />
                <field name="partner_id" />
                <field name="redeem_date" />
                <field name="points" />
                <field name="redeem_amount" />
            </tree>
        </field>
    </record>
    <!-- form -->
