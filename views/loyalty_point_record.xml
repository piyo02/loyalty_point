                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="points"/>
                        </group>
                        <group>
                            <field name="redeem_date"/>
                            <field name="redeem_amount"/>
                        </group>
                    </group>
                </div>
            </form>
        </field>
    </record>

    <!-- action in pos -->
    <record id="action_earned_loyalty_point_from_pos" model="ir.actions.act_window">
        <field name="name">Earned Loyalty Point from POS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loyalty.point.record</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_redeem_point_in_pos" model="ir.actions.act_window">
        <field name="name">Redeem Point in POS</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">redeem.loyalty.point.record</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- menu in pos -->
    <menuitem id="menu_loyalty_point_in_pos" 
              name="Loyalty" 
              parent="point_of_sale.menu_point_root" 
              groups="point_of_sale.group_pos_manager"
    />
    <menuitem id="menu_earned_loyalty_point_from_pos" 
              name="Earned Loyalty Point" 
